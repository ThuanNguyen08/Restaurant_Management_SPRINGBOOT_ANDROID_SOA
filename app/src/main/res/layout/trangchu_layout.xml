<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            >
            <!-- Phần đầu với nút Logout và tiêu đề -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <!-- Nút Logout ở góc phải -->
                <ImageView
                    android:id="@+id/btn_logout"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_logout"
                    android:contentDescription="Logout"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp" />

                <!-- Tiêu đề ở giữa -->
                <TextView
                    android:id="@+id/txt_welcom_XinChao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Nhà hàng SBTC"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    >
                    <RelativeLayout
                        android:id="@+id/layout_displayhome_ThongKe"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:elevation="8dp"
                        android:layout_margin="10dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@drawable/revenue"
                            />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="33dp"
                        android:layout_margin="10dp"
                        android:gravity="center_horizontal"
                        android:text="Thống kê doanh thu"
                        android:textAlignment="center"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    >
                    <RelativeLayout
                        android:id="@+id/layout_displayhome_XemBan"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:elevation="8dp"
                        android:layout_margin="10dp"
                        >

                        <ImageView
                            android:layout_width="250dp"
                            android:layout_height="200dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/tablefood"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:text="Xem danh sách bàn"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    >
                    <RelativeLayout
                        android:id="@+id/layout_displayhome_XemMenu"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:elevation="8dp"
                        android:layout_margin="10dp"
                        >

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="500dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/thucdon"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:text="Xem menu"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    >
                    <RelativeLayout
                        android:id="@+id/layout_displayhome_XemDanhMuc"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:elevation="8dp"
                        android:layout_margin="10dp"
                        >

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="500dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/icon_danhmuc"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:text="Xem danh mục"
                        android:textColor="@color/black"
                        android:layout_margin="10dp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Thanh Toán Hôm Nay"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/txt_displayhome_ViewAllStatistic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem tất cả >"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_displayhome_DonTrongNgay"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:clipToPadding="false"
                />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

